    <rationale>Idealized 1% per year increase in CO2 to quadrupling. After quadrupling hold concentrations
        fixed.</rationale>
    <Why> Diagnostic experiment for understanding the long-term simulations. Evaluate model response
        without complications of aerosols, land-use change etc. </Why>

    <!-- Initial Conditions -->
    <numericalRequirement xsi:type="InitialCondition">
        <id xsi:type="Identifier">ic.3005</id>
        <name xsi:type="Identifier">09.ic</name>
        <description> Initial conditions are either from the pre-industrial control or present-day
            control experiments. Must initialise from a point early enough in the control experiment
            to ensure that the end of the idealized experiment ends before the end of the
            control(290 years). </description>
    </numericalRequirement>

    <!-- The start date for this idealized experiment is specified as an offset from the control -->

    <!-- Boundary Conditions -->
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.3034</id>
        <name xsi:type="Identifier">09.bc.1%4xCO2.conc</name>
        <description>Prescribed changing atmospheric concentration of carbon dioxide with 1% per
            year increase to quadrupling. </description>
        <numericalRequirement xsi:type="SpatioTemporalConstraint">
            <DateRange>
                <startDate>0000-01-01T00:00:00Z</startDate>
                <endDate>0141-01-01T00:00:00Z</endDate>
            </DateRange>
        </numericalRequirement>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.3035</id>
        <name xsi:type="Identifier">09.bc.4xCO2.conc</name>
        <description>Prescribed fixed atmospheric concentration of carbon dioxide at quadruple the
            control concentration.</description>
        <numericalRequirement xsi:type="SpatioTemporalConstraint">
            <DateRange>
                <startDate>0141-01-01T00:00:00Z</startDate>
                <endDate>0291-01-01T00:00:00Z</endDate>
            </DateRange>
        </numericalRequirement>
    </numericalRequirement>


    <shortName>09_1pct4xCo2</shortName>
    <longName>Experiment09_1pctCO2IncreaseToQuadrupling</longName>

    <CalendarType>
        <realCalendar>
            <range>0000-0290</range>
        </realCalendar>
    </CalendarType>
    <requiredDuration xsi:type="ClosedDateRange">
        <startDate>0000-01-01T00:00:00Z</startDate>
        <endDate>0291-01-01T00:00:00Z</endDate>
        <lengthYears>290</lengthYears>
